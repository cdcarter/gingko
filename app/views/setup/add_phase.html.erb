<h1>Add phase to <%= @tournament.name %></h1>

<% form_for :phase do |f| %>
  <p>
    <label for="phase[name]">Phase name: </label>
      <%= f.text_field :name %>
  </p>
  
  <p>
    <label for="phase[note]">Phase notes (printed at the bottom of schedules): </label>
    <%= f.text_area :note %>
  </p>
  
  <%= f.submit %>
<% end %>