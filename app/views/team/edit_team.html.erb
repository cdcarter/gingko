<h1>Edit team <%= @team.name %></h1>

<% form_for :team do |f| %>
  <p>
    <label for="team[name]">Team name: </label>
      <%= f.text_field :name %>
  </p>
  
  <p>
    <label for="team[fee]">Fee discount/penalty for team: </label>
      <%= f.text_field :fee %>
  </p>
  
  <p>
    <label for="team[info]">Team info: </label>
      <%= f.text_field :info %>
  </p>
  
  <%= f.submit %>
<% end %>
